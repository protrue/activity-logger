<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ActivityLogger.Gui.Controls.CustomDatePicker">
  <StackPanel MaxHeight="24">
    <Button x:Name="ButtonPrevious" Content="&lt;" Margin="2" FontWeight="Bold"></Button>
    <DatePicker x:Name="DatePicker"></DatePicker>
    <Button x:Name="ButtonNext" Content="&gt;" Margin="2" FontWeight="Bold"></Button>
  </StackPanel>
</UserControl>
